(defwindow calendar
    :monitor 0
    :geometry (geometry :x "0px"
                        :y "4px"
                        :width "280px"
                        :height "80px"
                        :anchor "top right")
    :stacking "fg"
    (calendar_widget))

(defwidget calendar_widget []
    (box :class "calendar-box"
         :orientation "vertical"
         :style "height: 480px;"
         (calendar
            :class "calendar"
            :style "height:240px;"
         )
    )
)
